             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TourStops.Pages.PastryPage" Title="Pastry">
	<StackLayout>
		<BoxView BackgroundColor="#44004400" HeightRequest="6"  />
		<Grid HeightRequest="250" >
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="60" />
			</Grid.RowDefinitions>

			<Image Source="StopPastry.jpg" Aspect="AspectFill"  HeightRequest="250" Grid.RowSpan="2"/>
		
			<BoxView BackgroundColor="#66004400" Grid.Row="1" />
