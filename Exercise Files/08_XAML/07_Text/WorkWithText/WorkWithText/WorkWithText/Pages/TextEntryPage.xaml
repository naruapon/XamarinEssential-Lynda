<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkWithText.Pages.TextEntryPage">
	<StackLayout Padding="20">
	<Label Text="The Entry view" FontSize="24" HorizontalOptions="Center" />
		<Label Text="A control that can edit a single line of text." FontSize="14" HorizontalOptions="Center" />
		<Entry Placeholder="Enter your motto!" />
		<Entry  IsPassword="True" />
		<Entry  Text = "The initial text." TextColor="Maroon"/>
		<Entry Text="Show the Number keyboard" Keyboard="Numeric"/>
		<Entry Text="Show the Telephone keyboard" Keyboard="Telephone"/>
	</StackLayout>
</ContentPage>